FROM python:3.10-slim

LABEL maintainer="Shrimp AI Team"
LABEL description="Shrimp Farming LLM Service"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY llm_service/ ./llm_service/
COPY rag_system/ ./rag_system/
COPY financial_module/ ./financial_module/
COPY recommendation_engine/ ./recommendation_engine/
COPY .env.example ./.env

# Create necessary directories
RUN mkdir -p /app/logs /app/uploads /app/llm_service/models /app/rag_system/knowledge_db

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run application
CMD ["python", "-m", "uvicorn", "llm_service.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
