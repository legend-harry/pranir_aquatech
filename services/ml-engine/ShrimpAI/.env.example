# ============================================
# ü¶ê SHRIMP AI - ENVIRONMENT CONFIGURATION
# ============================================

# -----------------
# LLM Configuration
# -----------------
LLM_MODEL_NAME=microsoft/phi-2
# Options: microsoft/phi-2, meta-llama/Llama-3.2-3B, mistralai/Mistral-7B-v0.1
LLM_MODEL_PATH=./llm_service/models/shrimp-llm-v1
LLM_MAX_LENGTH=2048
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_TOP_K=50
LLM_USE_4BIT=true
LLM_DEVICE=cuda  # cuda, cpu, mps (macOS)

# LoRA Configuration
LORA_R=16
LORA_ALPHA=32
LORA_DROPOUT=0.05
LORA_TARGET_MODULES=q_proj,v_proj

# -----------------
# RAG System
# -----------------
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHROMADB_PATH=./rag_system/knowledge_db
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# -----------------
# Computer Vision
# -----------------
VISION_MODEL_PATH=./vision_service/models
HEALTH_DETECTION_MODEL=yolov8n-shrimp-health.pt
COUNTING_MODEL=yolov8n-shrimp-counter.pt
BEHAVIOR_MODEL=yolov8n-behavior.pt
VISION_CONFIDENCE_THRESHOLD=0.6
VISION_IOU_THRESHOLD=0.45

# -----------------
# API Configuration
# -----------------
API_HOST=0.0.0.0
API_PORT=8000
VISION_API_PORT=8002
API_WORKERS=4
API_RELOAD=false
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_KEY_HEADER=X-API-Key
RATE_LIMIT=100  # requests per minute

# -----------------
# Firebase Integration
# -----------------
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CREDENTIALS_PATH=./config/firebase-credentials.json
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# -----------------
# Redis Cache
# -----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600  # seconds

# -----------------
# Training Configuration
# -----------------
TRAINING_DATA_PATH=./training_data
TRAINING_BATCH_SIZE=4
TRAINING_EPOCHS=3
TRAINING_LEARNING_RATE=2e-4
TRAINING_WARMUP_STEPS=100
TRAINING_GRADIENT_ACCUMULATION_STEPS=4
TRAINING_SAVE_STEPS=500

# -----------------
# Logging & Monitoring
# -----------------
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json
LOG_FILE=./logs/shrimp_ai.log
ENABLE_METRICS=true
METRICS_PORT=9090

# -----------------
# Security
# -----------------
API_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400  # 24 hours in seconds

# -----------------
# Feature Flags
# -----------------
ENABLE_VISION_SERVICE=true
ENABLE_FINANCIAL_MODULE=true
ENABLE_RAG_SYSTEM=true
ENABLE_RECOMMENDATIONS=true
ENABLE_MARKET_PREDICTION=true

# -----------------
# Financial Module
# -----------------
MARKET_DATA_REFRESH_HOURS=6
DEFAULT_CURRENCY=USD
CURRENCY_API_KEY=your-currency-api-key

# -----------------
# Development
# -----------------
DEBUG_MODE=false
MOCK_RESPONSES=false
DISABLE_AUTH=false
