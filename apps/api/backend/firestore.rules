rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Allow partners to query users by mobile number for report uploads
    match /users/{userId} {
      allow read: if isOwner(userId) || (isAuthenticated() && resource.data.role == 'customer');
      
      // Allow users to create/update their own document (for profile setup)
      allow create, update: if isOwner(userId);
      
      // Allow delete only if owner
      allow delete: if isOwner(userId);
      
      // User's projects subcollection
      match /projects/{projectId} {
        // Allow authenticated users to read/create/update/delete their own projects
        allow create: if isOwner(userId);
        allow read, update, delete: if isOwner(userId);
      }
      
      // User's transactions subcollection
      match /transactions/{transactionId} {
        // Allow authenticated users to read/create/update/delete their own transactions
        allow create: if isOwner(userId);
        allow read, update, delete: if isOwner(userId);
      }

      // User's lab reports subcollection
      match /labReports/{reportId} {
        allow read, write: if isOwner(userId);
      }

      // Lab partners subcollection
      match /labPartners/{partnerId} {
        allow read, write: if isOwner(userId);
      }

      // Partner profile and uploads
      match /partnerProfile/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /labTests/{testId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's budgets subcollection
      match /budgets/{budgetId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's employees subcollection
      match /employees/{employeeId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's attendance subcollection
      match /attendance/{attendanceId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's ponds/shrimp data
      match /ponds/{pondId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Partner registrations - allow authenticated users to create, admins to read all
    match /partnerRegistrations/{registrationId} {
      allow create: if isAuthenticated();
      allow read: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
